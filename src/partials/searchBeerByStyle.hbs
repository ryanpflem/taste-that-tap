<script id="searchBeerByStyleTemplate" type="text/x-handlebars-template">	
  <div class="column">
    <div class="callout search-geo-point breweryId-{{{{raw}}}}{{breweryId}}{{{{/raw}}}}">
      <h5 class="title">{{{{raw}}}} {{breweryName}} {{{{/raw}}}}</h5>
      <p class="image"><img src="{{{{raw}}}} {{breweryImages.squareLarge}} {{{{/raw}}}}" alt="brewery image"></p>
      <p><a class="website" href="{{{{raw}}}}{{breweryWebsite}}{{{{/raw}}}}" target="blank">{{{{raw}}}} {{breweryWebsiteDisplay}} {{{{/raw}}}}</a></p>      
      <ul class="accordion" data-accordion role="tablist">
        <li class="accordion-item is-active">
          {{!-- <!-- The tab title needs role="tab", an href, a unique ID, and aria-controls. --> --}}
          <a href="#panel1" role="tab" class="accordion-title" id="panel1-heading" aria-controls="panel1">General</a>
          {{!-- <!-- The content pane needs an ID that matches the above href, role="tabpanel", data-tab-content, and aria-labelledby. --> --}}
          <div id="panel1" class="accordion-content" role="tabpanel" data-tab-content aria-labelledby="panel1-heading">
          {{!-- First panel --}}
            <p class="location-type">{{{{raw}}}} {{beerName}} {{{{/raw}}}}</p>
            <p class="location">{{{{raw}}}} {{breweryLocality}} {{{{/raw}}}}, {{{{raw}}}} {{breweryRegion}} {{{{/raw}}}}</p>
          </div>
        </li>
        <li class="accordion-item">
          {{!-- <!-- The tab title needs role="tab", an href, a unique ID, and aria-controls. --> --}}
          <a href="#panel2" role="tab" class="accordion-title" id="panel2-heading" aria-controls="panel2">Description</a>
          {{!-- <!-- The content pane needs an ID that matches the above href, role="tabpanel", data-tab-content, and aria-labelledby. --> --}}
          <div id="panel2" class="accordion-content" role="tabpanel" data-tab-content aria-labelledby="panel2-heading">
          {{!-- Second panel --}}
            <p class="description">{{{{raw}}}} {{beerDesc}} {{{{/raw}}}}</p>
          </div>
        </li>
      </ul>
    </div>
  </div>
</script>